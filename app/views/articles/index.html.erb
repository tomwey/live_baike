<div class="box">
  <div class="row-fluid">
    <div class="span8"><h2>文章</h2></div>
    <div class="span4"><%= link_to '新建文章', new_article_path, class: "btn btn-primary pull-right" %></div>
  </div>

  <table class="table table-striped">
    <tr>
      <th>#</th>
      <th>标题</th>
      <th>内容</th>
      <th>所属类别</th>
      <th>#</th>
    </tr>
  
    <% @articles.each do |article| %>
    <tr>
      <td><%= article.id %></td>
      <td><%= link_to article.title, article %></td>
      <td><%= truncate(article.body) %></td>
      <td><%= article.category.name %></td>
      <td><%= link_to 'Edit', edit_article_path(article), class: "btn btn-mini" %> 
      <%= link_to 'Delete', article_path(article), :method => :delete, confirm: "你确定要删除吗？", class: "btn btn-danger btn-mini" %></td>
    </tr>
    <% end %>
  
    <%= will_paginate @articles %>
  
  </table>
</div>
